{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./web/client/*"
      ],
      "@/*": [
        "./web/client/*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@types/node",
      "nuxt-i18n"
    ],
    "resolveJsonModule": true,
    "rootDir": "./",
    "declarationDir": "./lib",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist",
    "_theme"
  ]
}
